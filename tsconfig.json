{
    "compilerOptions": {
        "moduleResolution": "Node",
        "target": "ESNext",
        "module": "ESNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "downlevelIteration": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true
        // "inlineSources": true,
        // "isolatedModules": true
    },
    "include": ["packages"]
}
